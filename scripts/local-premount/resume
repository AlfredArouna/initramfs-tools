#!/bin/sh

PREREQ=""

prereqs()
{
	echo "$PREREQ"
}

case $1 in
# get pre-requisites
prereqs)
	prereqs
	exit 0
	;;
esac

if [ -z "${resume}" ]; then
	exit 0
fi

case $resume in
	LABEL=*)
	resume="/dev/disk/by-label/${resume#LABEL=}"
	;;
	UUID=*)
	resume="/dev/disk/by-uuid/${resume#UUID=}"
	;;
esac

if [ ! -e "${resume}" ]; then
	exit 0
fi

if [ -e /sys/power/resume ]; then
	# hardcode path, uswsusp ships an resume binary too
	/bin/resume ${resume}
fi
