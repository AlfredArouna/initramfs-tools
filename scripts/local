# Local filesystem mounting

# Parameter: Where to mount the filesystem
mountroot ()
{
	# Get the root filesystem type
	if [ ! -e ${ROOT} ]; then
		panic "ALERT!  ${ROOT} does not exist.  Dropping to a shell!"
	fi

	eval $(fstype < ${ROOT})

	# Mount root
	mount ${ro} -t ${FSTYPE} ${ROOT} ${rootmnt}
}
